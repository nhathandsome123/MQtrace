# ==========================================================
# Docker Compose Stack: EMQX + HAProxy + InfluxDB + IDS
# ==========================================================

services:
  # ==========================================================
  # üîê HAProxy - TLS Termination Proxy for MQTT
  # ==========================================================
  haproxy:
    image: haproxy:2.9
    container_name: haproxy
    restart: unless-stopped
    network_mode: host                        # use host networking (binds to host ports)
    volumes:
      - ./certs:/usr/local/etc/haproxy/certs:ro
      - ./haproxy.cfg:/usr/local/etc/haproxy/haproxy.cfg:ro
    depends_on:
      - emqx

  # ==========================================================
  # üü¢ EMQX MQTT Broker (Plaintext, Receives from HAProxy)
  # <<< GI·ªÆ NGUY√äN 100% C·∫§U H√åNH EMQX C·ª¶A B·∫†N >>>
  # ==========================================================
  emqx:
    image: emqx/emqx:5.0.13
    container_name: emqx
    restart: unless-stopped
    ports:
      - "127.0.0.1:1883:1883"     # Plain MQTT (HAProxy forwards here)
      - "18083:18083"   # Dashboard
    environment:
      # Dashboard
      - EMQX_DASHBOARD__DEFAULT_USERNAME=admin
      - EMQX_DASHBOARD__DEFAULT_PASSWORD=public

      # Authentication
      - EMQX_AUTHENTICATION__1__ENABLE=true
      - EMQX_AUTHENTICATION__1__MECHANISM=password_based
      - EMQX_AUTHENTICATION__1__BACKEND=built_in_database
      - EMQX_AUTHENTICATION__1__PASSWORD_HASH_ALGORITHM__NAME=sha256
      - EMQX_AUTHENTICATION__1__PASSWORD_HASH_ALGORITHM__SALT_POSITION=prefix

      # Authorization
      - EMQX_AUTHORIZATION__NO_MATCH=deny
      - EMQX_AUTHORIZATION__SOURCES__1__TYPE=file
      - EMQX_AUTHORIZATION__SOURCES__1__ENABLE=true
      - EMQX_AUTHORIZATION__SOURCES__1__PATH=/opt/emqx/etc/acl.conf
      - EMQX_AUTHORIZATION__SOURCES__2__TYPE=built_in_database
      - EMQX_AUTHORIZATION__SOURCES__2__ENABLE=false

      - EMQX_NODE__COOKIE=dev_cookie_change_me
      - EMQX_LISTENER__TCP__EXTERNAL__ENABLE=true
      - EMQX_LISTENER__TCP__EXTERNAL__PORT=1883
    volumes:
      - ./certs:/opt/emqx/etc/certs:ro
    networks:
      - iot-net

  # ==========================================================
  # üü£ InfluxDB - Time Series Database
  # ==========================================================
  influxdb:
    image: influxdb:2.7
    container_name: influxdb
    restart: unless-stopped
    ports:
      - "8086:8086"
    environment:
      - DOCKER_INFLUXDB_INIT_MODE=setup
      - DOCKER_INFLUXDB_INIT_USERNAME=admin
      - DOCKER_INFLUXDB_INIT_PASSWORD=admin123
      - DOCKER_INFLUXDB_INIT_ORG=iot-org
      - DOCKER_INFLUXDB_INIT_BUCKET=iot-data
      - DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=iot-admin-token-123
    networks:
      - iot-net
    healthcheck:
      test: ["CMD", "influx", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  # ==========================================================
  #  normalizing (D·ªäCH V·ª§ M·ªöI)
  # üìù EVE Forwarder - ƒê·ªçc log Suricata & ƒë·∫©y v√†o InfluxDB
  # ==========================================================
  eve-forwarder:
    container_name: eve-forwarder
    build:
      context: .
      dockerfile: Dockerfile.forwarder
    restart: unless-stopped
    networks:
      - iot-net
    volumes:
      # !! QUAN TR·ªåNG: Mount th∆∞ m·ª•c log Suricata c·ªßa host v√†o container
      - /var/log/suricata:/var/log/suricata:ro
    environment:
      - INFLUX_URL=http://influxdb:8086
      - INFLUX_TOKEN=iot-admin-token-123
      - INFLUX_ORG=iot-org
      - INFLUX_BUCKET=iot-data
      - EVE_DIR=/var/log/suricata
    depends_on:
      influxdb:
        condition: service_healthy # Ch·ªù InfluxDB s·∫µn s√†ng

  # ==========================================================
  # rules (D·ªäCH V·ª§ M·ªöI)
  # üîç Rule Detector - ƒê·ªçc InfluxDB & ph√°t hi·ªán b·∫•t th∆∞·ªùng
  # ==========================================================
  rule-detector:
    container_name: rule-detector
    build:
      context: .
      dockerfile: dockerfile # S·ª≠ d·ª•ng file dockerfile b·∫°n ƒë√£ cung c·∫•p
    restart: unless-stopped
    networks:
      - iot-net

    # ==========================================================
    # <<< C·∫¨P NH·∫¨T (FIX): S·ª≠ d·ª•ng c·∫•u h√¨nh M·ªöI NH·∫§T (v1.4) cho rule-detector >>>
    # (ƒê·ªÉ ƒë·∫£m b·∫£o mi·ªÖn tr·ª´ "replayer-" v√† d√πng Rule 8 m·ªõi)
    # ==========================================================
    environment:
      - INFLUX_URL=http://influxdb:8086
      - INFLUX_TOKEN=iot-admin-token-123
      - INFLUX_ORG=iot-org
      - SRC_BUCKET=iot-data
      - ALERT_BUCKET=iot-data
      # --- C·∫•u h√¨nh email (B·∫ÆT BU·ªòC ƒêI·ªÄN) ---
      - EMAIL_USER=Hieuttde160484@fpt.edu.vn
      - EMAIL_PASS=slvfzzsbyhnobcgi
      - EMAIL_TO=nhatt7404@gmail.com

      # (Rules 2, 4, 7) Mi·ªÖn tr·ª´ c√°c client_id B·∫ÆT ƒê·∫¶U B·∫∞NG c√°c ti·ªÅn t·ªë n√†y
      # (D√πng cho c√°c script replayer h·ª£p l·ªá)
      - FLOOD_STORM_ALLOWED_PREFIXES=replayer-

    depends_on:
      influxdb:
        condition: service_healthy # Ch·ªù InfluxDB s·∫µn s√†ng
  # ==========================================================
  # üìä Grafana - Dashboard ph√¢n t√≠ch d·ªØ li·ªáu MQTT/IDS
  # ==========================================================
  grafana:
    image: grafana/grafana:9.2.1
    container_name: grafana
    restart: unless-stopped
    ports:
      - "3000:3000"
    environment:
      - GF_SECURITY_ADMIN_USER=admin
      - GF_SECURITY_ADMIN_PASSWORD=admin123
      - GF_USERS_ALLOW_SIGN_UP=false

      # K√≠ch ho·∫°t plugin InfluxDB 2.x (Flux)
      - GF_INSTALL_PLUGINS=grafana-influxdb-flux-datasource

    networks:
      - iot-net
    depends_on:
      influxdb:
        condition: service_healthy

  
# ==========================================================
# Virtual Network for EMQX + InfluxDB (HAProxy uses host net)
# ==========================================================
networks:
  iot-net:
    driver: bridge
    ipam:
      config:
        - subnet: 172.28.0.0/24
